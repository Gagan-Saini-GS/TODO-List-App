<!-- By including header and footer in all ejs files I have same styles accorss the website -->
<!-- and I don't have to copy-paste codes -->
<!-- And this is called layouts in ejs. (very useful) -->

<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%=item._id%>"
        onchange="this.form.submit()"
      />
      <p><%= item.name %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>" />
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="listItem" placeholder="To Do" autocomplete="off" />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>
